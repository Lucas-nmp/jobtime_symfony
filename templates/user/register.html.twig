{% extends 'base.html.twig' %}

{% block title %}Registro de trabajador{% endblock %}

{% block body %}
<h2 class="card-title mb-4 text-center" style="margin-top: 2rem;">Registrar nuevo trabajador</h2>
<div class="d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card p-4" style="max-width: 500px; width: 100%;">
        

        <!-- Mostrar mensajes flash -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }}">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'autocomplete': 'off'}}) }}
        
        <div class="mb-3">
            {{ form_label(form.name, 'Nombre', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'autocomplete': 'off'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.email, 'Correo Electrónico', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.password, 'Contraseña', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'autocomplete': 'new-password'}}) }}
            {{ form_errors(form.password) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.phone, 'Teléfono', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.phone) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.id, 'Identificador', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.id, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.id) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.dailyWorkHours, 'Horas Diarias de Trabajo', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.dailyWorkHours, {'attr': {'class': 'form-control'}}) }}
            {{ form_help(form.dailyWorkHours) }}
            {{ form_errors(form.dailyWorkHours) }}
        </div>


        <div class="d-flex justify-content-between">
            <a href="{{ path('app_user') }}" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

{% endblock %}
