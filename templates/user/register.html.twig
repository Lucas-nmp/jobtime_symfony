{% extends 'base.html.twig' %}

{% block title %}Registro de trabajador{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card p-4" style="max-width: 500px; width: 100%;">
        <h2 class="card-title mb-4 text-center">Registrar nuevo trabajador</h2>

        <!-- Mostrar mensajes flash -->
        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
        
        <div class="mb-3">
            {{ form_label(form.name, 'Nombre', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.email, 'Correo Electrónico', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.password, 'Contraseña', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.password) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.phone, 'Teléfono', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.phone) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.id, 'Identificador', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.id, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.id) }}
        </div>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_user') }}" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}